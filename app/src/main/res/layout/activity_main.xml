<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop = "12dp"
            android:orientation="vertical">

            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/cam_logo_img_view"
                    android:layout_width="59dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0"
                    android:scaleType="fitCenter"
                    android:src="@drawable/camera_icon" />

                <ImageView
                    android:id="@+id/business_name_img_view"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/cam_logo_img_view"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:cropToPadding="false"
                    android:scaleType="centerCrop"
                    android:src="@drawable/business_logo" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/cam_logo_img_view"
                android:layout_margin="0dp"
                android:adjustViewBounds="true"
                android:cropToPadding="false"
                android:paddingTop = "12dp"
                android:scaleType="fitCenter"
                android:src="@drawable/harsh" />

            <TextView
                android:text="Welcome to Shiv S Vasanth Photography.  We cater to Candid photography shoots for weddings, birthdays and other special occasions in the San Francisco Bay Area.  We offer portrait photography as well.  Please view some samples below and contact us for a quote. It is time to make the special moment in your life memorable with Shiv S Vasanth Photography. "
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop = "24dp"
                android:paddingBottom = "24dp"
                android:textAlignment="center"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:padding="0dp"
                android:scaleType="centerCrop"
                android:src="@drawable/hor_line" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:text="Business Address and hours \n \n 1221 Yarwood Ct \n San Jose CA 95128 \n \n Business Hours : 9am - 9pm \n Quotes will be higher on public holidays."
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight = "1"
                    android:textAlignment="center"
                    android:gravity="top"
                    android:paddingTop = "8dp"
                    android:paddingBottom = "8dp" />

                <ImageView
                    android:layout_width="4dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0"
                    android:padding="0dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/line" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp"
                    android:gravity="top"
                    android:text="Contact Details \n \n \n shiv.s.vasanth@gmail.com \n Mobile: +1 (979) 703 0135 \n WhatsApp: +65 92714294"
                    android:textAlignment="center" />
                </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:padding="0dp"
                android:scaleType="centerCrop"
                android:src="@drawable/hor_line" />

            <TextView
                android:text="Gallery"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:paddingBottom = "12dp"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:adjustViewBounds="true"
                android:cropToPadding="false"
                android:paddingTop = "12dp"
                android:scaleType="fitCenter"
                android:src="@drawable/portrait" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:padding="0dp"
                android:scaleType="centerCrop"
                android:src="@drawable/hor_line" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:adjustViewBounds="true"
                android:cropToPadding="false"
                android:paddingTop = "12dp"
                android:scaleType="fitCenter"
                android:src="@drawable/baby" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:padding="0dp"
                android:scaleType="centerCrop"
                android:src="@drawable/hor_line" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:adjustViewBounds="true"
                android:cropToPadding="false"
                android:paddingTop = "12dp"
                android:scaleType="fitCenter"
                android:src="@drawable/bridal" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:padding="0dp"
                android:scaleType="centerCrop"
                android:src="@drawable/hor_line" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:adjustViewBounds="true"
                android:cropToPadding="false"
                android:paddingTop = "12dp"
                android:scaleType="fitCenter"
                android:src="@drawable/groom" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:padding="0dp"
                android:scaleType="centerCrop"
                android:src="@drawable/hor_line" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:adjustViewBounds="true"
                android:cropToPadding="false"
                android:paddingTop = "12dp"
                android:scaleType="fitCenter"
                android:src="@drawable/birthday" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:padding="0dp"
                android:scaleType="centerCrop"
                android:src="@drawable/hor_line" />

            <TextView
                android:text="Copyright Â© 2018 Shiv S Photography Inc. All rights reserved."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:paddingBottom = "12dp"/>

            </LinearLayout>

    </ScrollView>

</android.support.constraint.ConstraintLayout>